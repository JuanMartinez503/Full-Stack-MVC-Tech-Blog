<div class="m-2 row mb-4 blog">
  <div style="font-size: x-large;" class="rem-2 col-md-5">
    <!-- Call helper function with triple brackets to render the emoji span as HTML -->
    {{blog.title}}
    <p style="font-size: medium;">Created by {{blog.user.username}} on {{format_date blog.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p style="font-size: x-large;">
      {{blog.description}}
    </p>
  </div>
  
  <!-- Display all the comments -->
    {{#if blog.comments.length}}
    <h2 class="comment-section">Comments</h2>
    <div>
  {{#each blog.comments}}
  <div class="side-cont mx-5 my-2 p-2">
    <div class="m-1">{{comment}}</div> 
    <div class="m-1"> made by {{user.username}} on {{format_date comment_created}} </div>
    <button class="text-center m-1 btn btn-sm btn-danger deleteButton" data-info="{{id}}">Delete</button>

  </div>
  {{/each}}
  </div>
  {{/if}}
  <form class="m-4 ">
    <textarea class="text-black rounded rem-3" id="comment" type="text"></textarea>
    <br>
    <button class="my-2 btn btn-primary" data-id="{{blog.id}}" id="commentBtn">Add Comment</button>
  </form>
</div>
<script src="/js/addComments.js"></script>
