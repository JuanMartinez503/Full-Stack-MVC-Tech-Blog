<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user_name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">Blog Title:</label>
        <br>
        <input class="form-input" type="text" id="project-title" name="project-name" />
      </div>

      <div class="form-group">
        <label for="project-desc">Description:</label>
        <br>
        <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
  <div class="col-md-6 project-list">
    <h3>Current Projects:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blogs/{{blog.id}}">{{blog.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="delete btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
          <button class="update btn btn-sm btn-danger" data-update="{{blog.id}}">UPDATE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/blogs.js"></script>